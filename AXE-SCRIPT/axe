_AXE_UDEV_INSTALLED_YES=$_AXE_UDEV_INSTALLED_YES
_AXE_SOURCES_FETCHED_YES=$_AXE_SOURCES_FETCHED_YES
_AXE_VERSIONS_CHECKED_YES=$_AXE_VERSIONS_CHECKED_YES
_AXE_INIT_REPLACED_YES=$_AXE_INIT_REPLACED_YES
