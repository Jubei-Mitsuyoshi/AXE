#pycuda out of date in arch and not compiling, waiting for arch to sort it out
#python2-pycuda --install --nocon $_AXE_PKGBUILD_DIR $_AXE_OPT_TYPE --nofail --nosuc --tag --nocheck" > "$_AXE_DIR/nvidia.list"

	if [[ $? -eq 0 && -s "$_AXE_DIR/nvidia.list" ]]; then
		axe_block "nvidia.list sucsessfully written"
	else
		axe_fuck "problem with writing nvidia.list check the output above"
		any_key
	fi
}

