_AXE_PKGBUILD_GIT_FETCHED_YES=$_AXE_PKGBUILD_GIT_FETCHED_YES
_AXE_BINARY_GIT_FETCHED_YES=$_AXE_BINARY_GIT_FETCHED_YES
